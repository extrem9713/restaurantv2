<div class="container mt-5">

  <!-- search bar -->
  <!-- search bar -->
  <div class="container search-bar">
    <div class="search-bar-outer mb-5">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
          <a href="./restaurants/new" class="btn btn-primary d-flex justify-content-center mt-2">Create</a>
        </form>
      </div>
    </div>
    </>
    <!-- movie list -->


    <div class="row" id="data-panel">
      <div class="col-md-10 col-12 mx-auto">
        {{{error}}}
        <div class="card-columns">
          {{#each restaurants}}

          <a href="/restaurants/{{this.id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="d-flex justify-content-around align-items-center">
                <a class="btn btn-success" href="/restaurants/{{this._id}}/edit">edit</a>
                <a class="btn btn-info" href="/restaurants/{{this._id}}">detail</a>
                <form action="/restaurants/{{this._id}}/delete" method="POST" style="display: inline;">
                  <button type="button" class="btn btn-danger" data-toggle="modal"
                    data-target="#deletemodal{{this._id}}">delete</button>
                </form>
              </div>
            </div>
          </a>


          <!-- Modal -->
          <div class="modal fade" id="deletemodal{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  您確定要刪除{{this.name}}嗎?
                </div>
                <div class="modal-footer">
                  <form action="/restaurants/{{this._id}}/delete" method="POST">
                    <button type="submit" class="btn btn-primary">確定</button>
                  </form>
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>

                </div>
              </div>
            </div>
          </div>

          {{/each}}
        </div>
      </div>
    </div>
  </div>